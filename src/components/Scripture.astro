---
const { verses } = Astro.props;
const { heading } = Astro.props;
const { chapter } = Astro.props;
const { text } = Astro.props;

// Function to convert numbers to superscript
function toSuperscript(text) {
    return text.replace(/(\d+)/g, '<sup>$1</sup>')
        .replace(/\[.\]/g, '');
}
---

<blockquote class="bg-white p-4 my-4 border-l-4 border-gray-500 rounded shadow-md">
    <p class="text-center text-sm text-gray-600 mb-2">{verses}</p>
    <h3 class="font-bold text-lg mb-2 text-center">{heading}</h3>
    <p class="italic">
        <span class="font-bold">{chapter}</span>
        <span set:html={toSuperscript(text)} class="text-gray-800" />
    </p>
</blockquote>


