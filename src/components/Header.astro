---
import { Image } from "astro:assets";
import logo from "../assets/logo.png";
---

<header
    x-data="{ openMenu: false }"
    class="bg-gradient-to-r from-blue-100 to-purple-100 dark:from-blue-900 dark:to-purple-900 shadow-md px-4 py-3 text-gray-800 dark:text-white"
>
    <!-- Mobile menu -->
    <nav class="lg:hidden flex justify-between items-center">
        <div class="flex-1"></div>
        <div class="flex-1">
            <a href="/" class="flex justify-center items-end text-3xl">
                <span class="text-4xl mr-2">✝️</span>
                <Image
                    src={logo}
                    alt="Logo"
                    loading="eager"
                    class="h-12 w-auto dark:invert"
                />
                <span class="text-4xl ml-2">☦️</span>
            </a>
        </div>

        <div class="flex items-center justify-end flex-1">
            <button
                @click="openMenu = !openMenu"
                class="focus:outline-none lg:hidden"
            >
                <svg
                    class="h-6 w-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path
                        x-show="!openMenu"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <div
            x-show="openMenu"
            class="fixed inset-0 z-50 bg-black bg-opacity-75 lg:hidden"
        >
            <div class="flex h-full items-center justify-center">
                <!-- Clickable button inside the mobile menu -->
                <button
                    @click="openMenu = !openMenu"
                    class="absolute top-6 right-6 text-white focus:outline-none"
                >
                    <!-- X icon -->
                    <svg
                        x-show="openMenu"
                        class="h-8 w-8"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
                <div
                    class="flex flex-col text-center text-white space-y-8 py-12 px-6 bg-gradient-to-b from-blue-900 to-purple-900 rounded-lg shadow-2xl"
                >
                    <a
                        href="/prayers"
                        class="block font-semibold text-xl text-white uppercase hover:text-blue-300 transition-colors duration-300"
                        >Akathist prayers</a
                    >
                    <a
                        href="/contact"
                        class="block font-semibold text-xl text-white uppercase hover:text-blue-300 transition-colors duration-300"
                        >Contact</a
                    >
                    <a
                        href="/"
                        class="block font-semibold text-xl text-white uppercase hover:text-blue-300 transition-colors duration-300"
                        >All for Jesus</a
                    >
                    <a
                        href="/memorial"
                        class="block font-semibold text-xl text-white uppercase hover:text-blue-300 transition-colors duration-300"
                        >Memorial</a
                    >
                </div>
            </div>
        </div>
    </nav>

    <!-- Desktop menu -->
    <nav class="hidden container mx-auto lg:flex items-end justify-center mb-4">
        <div class="flex-1 space-x-6 flex justify-end">
            <a
                href="/prayers"
                class="font-semibold uppercase hover:text-blue-600 dark:hover:text-blue-300 transition-colors duration-300"
                >Akathist prayers</a
            >
            <a
                href="/contact"
                class="font-semibold uppercase hover:text-blue-600 dark:hover:text-blue-300 transition-colors duration-300"
                >Contact</a
            >
        </div>
        <div class="flex-none mx-8">
            <a href="/" class="flex justify-center items-end text-3xl">
                <span class="text-4xl mr-2">✝️</span>
                <Image
                    src={logo}
                    alt="Logo"
                    loading="eager"
                    class="h-12 w-auto dark:invert"
                />
                <span class="text-4xl ml-2">☦️</span>
            </a>
        </div>
        <div class="flex-1 space-x-6 flex justify-start">
            <a
                href="/"
                class="font-semibold e uppercase hover:text-blue-600 dark:hover:text-blue-300 transition-colors duration-300"
                >All for Jesus</a
            >
            <a
                href="/memorial"
                class="font-semibold uppercase hover:text-blue-600 dark:hover:text-blue-300 transition-colors duration-300"
                >Memorial</a
            >
        </div>
    </nav>
</header>
